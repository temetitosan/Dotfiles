#Theme settings
borderwidth 5
color activeborder      "#6272A4"
color inactiveborder    "#282A36"
color menubg            "#282A36"
color menufg            "#282A36"
color font              "#FFFFFF"
color selfont           "#6272A4"

#Set Font
fontname                "Monospace:size=12"

#Keybindings
#C = control  S = Shift  4 = Mod4 (super key0
#Unbind Defaults
unbind-key      all
unbind-mouse    M-1
unbind-mouse    M-2
unbind-mouse    M-3

bind-key        4S-e    quit
bind-key        4S-r    restart
bind-key        4S-q    window-close
bind-key        4-Return urxvt

bind-mouse      4-1     window-move
bind-mouse      4-3     window-resize

#Applications Menu
command         chromium chrome
command         urxvt    urxvt
